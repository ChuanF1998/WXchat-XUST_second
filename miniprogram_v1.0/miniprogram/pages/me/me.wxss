/* pages/me/me.wxss */
.my_profile{
  display: flex;
  margin: 70rpx;
  background-color: #99ff00;
  height: 300rpx;
  justify-content: center;
  align-items: center;
}

.image_style{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  overflow:hidden
}

.menu_style{
  margin: 30rpx;
}

.menu-optional{
  margin-top: 5rpx;
  height: 80rpx;
  background-color: #eee;
  display: flex;
  align-items: center;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}